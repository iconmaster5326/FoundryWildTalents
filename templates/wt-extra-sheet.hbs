<form class="{{cssClass}}" autocomplete="off">
  <header>
    <h1 class="hbox">
      <img
        class="nogrow profile-img vgap8"
        src="{{item.img}}"
        data-edit="img"
        title="{{item.name}}"
        height="50"
        width="50"
      />
      <input
        class="grow hgap16 vgap8"
        type="text"
        name="name"
        value="{{data.name}}"
        placeholder="{{localize 'WT.Label.Name'}}"
      />
    </h1>
  </header>

  <div class="hbox vgap8">
    <label class="grow">{{localize "WT.Label.PointCost"}}: </label>
    <input class="grow2x" type="number" name="system.pointCost" value="{{system.pointCost}}">
  </div>

  <div class="hbox">
    <div class="grow nowrap">{{localize "WT.Label.Multibuy"}} </div>
    <input type="checkbox" name="system.multibuy" {{#if system.multibuy}}checked{{/if}}>
  </div>

  <div class="hbox">
    <div class="grow nowrap">{{localize "WT.Label.RequiresCapacity"}} </div>
    <input type="checkbox" name="system.requiresCapacity" {{#if system.requiresCapacity}}checked{{/if}}>
  </div>

  <div class="hbox">
    <div class="grow nowrap">{{localize "WT.Label.RequiresCondition"}} </div>
    <input type="checkbox" name="system.requiresCondition" {{#if system.requiresCondition}}checked{{/if}}>
  </div>

  <div class="hbox">
    <div class="grow nowrap">{{localize "WT.Label.FociOnly"}} </div>
    <input type="checkbox" name="system.fociOnly" {{#if system.fociOnly}}checked{{/if}}>
  </div>

  <h2>{{localize "WT.Label.Notes"}}</h2>
  {{editor (enrich system.notes) target="system.notes" button=true owner=owner editable=editable}}
</form>
