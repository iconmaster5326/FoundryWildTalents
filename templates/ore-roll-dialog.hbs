<form class="{{cssClass}} wildtalents ore-roll-dialog">
    <div class="hbox vgap16">
        <div class="nowrap grow">{{localize "WT.ORERollDialog.Dice"}}: </div>
        <input class="grow4x" type="text" name="dice" value="{{dice}}">
    </div>
    <div class="hbox vgap16">
        <div class="nowrap grow"> {{localize "WT.ORERollDialog.MinWidth"}}: </div>
        <input class="growhalf" type="text" name="minWidth" value="{{minWidth}}">
        <div class="nowrap grow"> {{localize "WT.ORERollDialog.MinHeight"}}: </div>
        <input class="growhalf" type="text" name="minHeight" value="{{minHeight}}">
    </div>
    <div class="hbox vgap16">
        <div class="nowrap grow"> {{localize "WT.ORERollDialog.PenaltyDice"}}: </div>
        <input class="growhalf" type="text" name="penaltyDice" value="{{penaltyDice}}">
        <div class="nowrap grow"> {{localize "WT.ORERollDialog.GobbleDice"}}: </div>
        <input class="growhalf" type="text" name="gobbleDice" value="{{gobbleDice}}">
    </div>
    <div class="hbox vgap16"> 
        <div class="nowrap grow">{{localize "WT.ORERollDialog.ExpertDiceFaces"}}: </div>
        <input class="grow4x" type="text" name="expertDiceFaces" value="{{expertDiceFaces}}" placeholder="{{localize "WT.ORERollDialog.ExpertDieFacesPlaceholder"}}">
    </div>
</form>
